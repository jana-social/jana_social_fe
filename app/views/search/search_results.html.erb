<!DOCTYPE html>
<html>
<head>
  <title>Search Results</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
    }

    header {
      background-color: #007bff;
      color: #fff;
      text-align: center;
      padding: 20px 0;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 20px;
    }

    .user-list {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .user-container {
      display: flex;
      border: 1px solid #ccc;
      padding: 10px;
      margin: 10px;
      width: 450px; /* Adjust width as needed */
    }

    .image-container {
      flex: 0 0 100px; /* Set the width of the image container */
      background-color: lightgray; /* Color for the image container */
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .username-header {
      background-color: lightblue; /* Color for the header section */
      padding: 5px;
      margin-bottom: 10px;
    }

    .user-body {
      padding: 5px;
    }
  </style>
</head>
<body>
  <header class="masthead bg-primary text-white text-center">
    <div class="container">
      <h1 class="masthead-heading mb-0">Jana Social</h1>
        <div class="divider-custom divider-light">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
            <div class="divider-custom-line"></div>
        </div>
      </div>
    </header>

  <div class="container">
    <div class="user-list">
    <h2>Friends Near You!</h2>
      <% @users.each do |user| %>
        <div class="user-container">
          <!-- Image container to the left -->
          <div class="image-container">
            <img src="<%= user.photo_url %>" alt="User Image">
            <!-- Example: <img src="user_image.jpg" alt="User Image"> -->
          </div>
          <!-- User details -->
          <div class="user-details">
            <div class="username-header">
              <h2><%= link_to user.username, search_user_path(user.id) %></h2>
            </div>
            <div class="user-body">
              <p>Likes: <%= user.likes %></p>
              <!-- Add more user information here -->
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</body>
</html>
