<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Jana Social</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/path/to/custom.css">
</head>
<body id="page-top">
    <header class="masthead bg-primary text-white text-center">
      <div class="d-flex align-items-center justify-content-center flex-column" style="height: 20px;">
        <h1 class="masthead-heading mb-0 text-center">Jana Social</h1>
        <div class="divider-custom divider-light">
          <div class="divider-custom-line"></div>
          <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
          <div class="divider-custom-line"></div>
        </div>
      </div>   
    </header>
    <section class="page-section portfolio" id="portfolio">
        <div class="container">
            <div class="text-center">
                <h2 class="page-section-heading text-secondary mb-0 d-inline-block">All Public Events</h2>
            </div>
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                <div class="divider-custom-line"></div>
            </div>
            <div class="row justify-content-center">
                <div class="event-list">
                    <% if @facade.present? %>
                        <ul>
                            <% @facade.each_with_index do |event, index| %>
                                <li class="event-item" id="event-<%= index + 1 %>">
                                    <h3><strong class="event-title"><%= link_to event.title, event_path(event.id.to_i) %></strong></h3>
                                    <p class="event-description">Description: <%= event.description %></p>
                                    <p class="event-details">Street Address: <%= event.street_address %></p>
                                    <p class="event-details">Zipcode: <%= event.zipcode %></p>
                                    <p class="event-details">Date/Time: <%= event.date_time %></p>
                                    <!-- Date Time:  Time.zone.parse(event.date_time).strftime('%B %e, %Y, %l:%M%P')<br> -->
                                    <!-- Date will look correct in saop but not in server -->
                                    <p class="event-details">Is this event private?: <%= event.private_status %></p>
                                    <p class="event-details">Host: <%= event.host %></p>
                                </li>
                                <hr>
                            <% end %>
                        </ul>
                    <% else %>
                        <h3>There are no events to display</h3>
                    <% end %>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
